   <!-- success.lenght likhne se blank and empty  alert nhi aayega -->

<% if (success && success.length) { %>
  <div class="alert alert-success alert-dismissible  col-6 offset-3" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<!-- alert-dismissible fade show  = ye class hai dismisses alert ke nich ehai se liya hai -->


