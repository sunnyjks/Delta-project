<%layout("layout/boilerplate")%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit Form </h2>

            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" value="<%= listing.title%>" class="form-control" required />
            
                    <div class="invalid-feedback">
                     pls enter title
                    </div>

                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control"  required><%=listing.description%></textarea>

                    <div class="invalid-feedback">
                  pls enter description
                 </div>

                </div>

                <div class="mb-3">
                    orginal listing image <br>
                    <img src="<%=originalImageUrl%>" style="height: 200px; width: 200px;" />

                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">upload new image url</label>
                    <input 
                    name="listing[image]" 
                    type ="file"  
                    class="form-control" 
                       >           <!-- value="<%= listing.image%>" and required [ye bhi hataya] nikal diya kyuki ab edit me new 2 image upload krna hai-->

                 <!-- <div class="invalid-feedback">
                  pls enter image url
                 </div> -->

                </div>

                <div class="row">

                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" value="<%=listing.price%>" type="number" class="form-control"  required>
                        <div class="invalid-feedback">
                            pls enter price
                       </div>

                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">country</label>
                        <input name="listing[country]" value="<%=listing.country%>" type="text" class="form-control" required>

                      <div class="invalid-feedback">
                       pls enter country
                     </div>

                    </div>


                </div>


                <div class="mb-5">
                    <label for="location" class="form-label">location</label>
                    <input name="listing[location]" value="<%=listing.location%>" type="text" class="form-control"  required>

                <div class="invalid-feedback">
                  pls enter location
                 </div>

                </div>



                <button class="btn  btn-danger">Edit Listing</button>  <!-- style.css me edit-btn idhar class deke hm udhar se bhi color of btn change kar sakte hai-->
                <br />
                <br />
            </form>
        </div>
    </div>
    