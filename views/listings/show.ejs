        <!-- review form banaya and user login tabhi comment kar paye isliye cond bhi daala-->
<% if(currUser) {%>
        <div class="listing-card col-6 offset-2">
            <hr />
            <h4>Leave a review</h4>

            <form action="/listings/<%=listing._id%>/reviews" method="POST" class="needs-validation mt-3 mb-3"
                novalidate>

                <div class="mt-3 mb-2">
                    <label for="rating" class="form-label">Rating</label>
                    <!-- iss ko comment kiya kyu ki range wala hatna tha <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range"> -->
                    <!--review object banaya hai// form-range bhi boostrp se liya for range sytling -->
                </div>
                <!-- https://github.com/LunarLogic/starability?tab=readme-ov-file  idhar se liya hai or public me slot wala css bhi dala hai -->
                <fieldset class="starability-slot"> <!-- basic se slot kiya-->
  <legend> rating:</legend>    
  <!-- <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." /> -->
  <input type="radio" id="first-rate1" name="review[rating]" value="1" /> <!-- name aaha rating tha jab ki db me slider wale ka ja raha tha jo tha review[reveiw] ka is liye ye change kiya is liya r-->
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>

                <br />
                <div class="mt-1 mb-3">

                    <label for="comment" class="form-label">comment</label>
                    <textarea name="review[comment]" id="comment" class="form-control" rows="5" cols="3"
                        required></textarea>
                    <div class="invalid-feedback">pls submit some comment for review</div>
                </div class="mt-3 mb-3">
                <br>
                <button class="btn btn-outline-dark">submit</button>

            </form>
<%}%>


            <!-- styling bhi diya hai card ka boostrap se -->
            <p><b>All reviews</b>
            <p></p>
            <div class="row">
                <% for(review of listing.reviews){%>

                    <div class="card col-5 ms-3 mb-3">

                        <div class="card-body ">
                            <h5 class="card-title">@<%=review.author.username %></h5>
                            <p class="card-text">
                                <%=review.comment%>
                            </p>
                            <!-- <p class="card-text">rating: <%=review.rating%></p>  kyu ki niche wala aa gaya hai-->

                             <!-- https://github.com/LunarLogic/starability?tab=readme-ov-file  ye web ke  ke part se Showing the static rating result
-->
                               <p class="starability-result card-text" data-rating="<%=review.rating%>">
                                  
                               </p>
                               <!-- ye line liya Showing the static rating result
-->

                        </div>
                      <br/>

                      <form class="mb-3" method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                        <button class="btn btn-sm btn-dark">Delete</button>
                      </form>

                    </div>



                <%}%>

            </div>

        </div>


    </div>

